<% if @all_past_orders.empty? %>
  &nbsp;
      <h5><em>There are no previous orders.</em></h5>

<% else %>
  <h3> Past Orders</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="100">Date</th>
        <th width="2250">Customer</th>
        <th width="225">Recipient</th>
        <th width="250">Items</th>
        <th width="100">Cost</th>
      </tr>
    </thead>
    <tbody>
        <% @all_past_orders.each do |order| %>
        <tr>
          <td><%= link_to order.date.strftime('%m/%d/%y'), order_path(order) %></td>
            <td><%= link_to order.customer.proper_name, customer_path(order.customer) %></td>   
          <td><%= link_to order.address.recipient, address_path(order.address) %></td>
          <td>
            <% order.order_items.each do |oi| %>
              <%= oi.quantity %> <%= oi.item.name %><br />
            <% end %>
          </td>
          <td><%= number_to_currency order.grand_total %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  
<%= will_paginate @all_past_orders, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  
<% end %>
<br />