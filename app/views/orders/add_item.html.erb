<div class="row">
  <div>
      <div class = "item-details small-7 columns">
        <h3><%= @item.name %></h3>
        <% if @item.picture_url.nil? %>
        <p><%= image_tag 'image-placeholder.png' %></p>  
        <% else %>
            <p><%= image_tag @item.picture_url %></p>  
        <% end %>
        <p>
            <b>Price</b>: <%= number_to_currency @item.current_price %>
        </p>
        <p>
            <b>Description</b>: <%=  @item.description %>
        </p>

        <p>
            <b>Units Per Item</b>: <%=  @item.units_per_item %>
        </p>
        <p>
            <b>Total weight:</b> <%= @item.weight %>&nbsp;lbs.
        </p>
    </div>
      <div class = "add-item-links small-5 columns">
          <%= link_to "Continue Shopping", items_path, class: "btn " %>
          <br>
            <br>
          <%= link_to "View Cart", view_cart_path, class: "btn" %>
          <br>
          <br>
          <%= link_to "Proceed to Checkout", checkout_cart_path, class: "btn" %>
          <br>
          <br>
      </div>
  </div>
    <%= render partial: 'items/related_items' %>
</div>
