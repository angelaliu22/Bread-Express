<%= render partial: 'order_confirmation' %>
<% unless @all_items.empty? %>
    <h3>Other Items</h3>
<% unless @all_items.empty? %>
    <div class="panel clearfix all-items">
        <ul>
            <% @all_items.each do |item| %>
            <div class = "item-object">
                <% if item.picture_url.nil? %>
                <p><%= image_tag 'image-placeholder.png' %></p>  
                <% else %>
                    <p><%= image_tag item.picture_url %></p>  
                <% end %>
                <li><%= link_to item.name, item_path(item) %></li>
            </div>
          <% end %>
        </ul>
  </div>
<% end %>

<% end %>