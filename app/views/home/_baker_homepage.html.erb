<% if @items_to_bake.empty? %>
  <h4>No unbaked items at this time!</h4>
<% else %>
  <h4>Items to Bake</h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="225">Name</th>
        <th width="125">Quantity</th>
      </tr>
    </thead>
    <tbody>
        <% @items_to_bake.each do |order_item| %>
        <tr>
            <td><%= link_to order_item.item.name, items_path(order_item.item) %></td>
            <td><%= order_item.quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table> 
<% end %>
<p>&nbsp;</p>