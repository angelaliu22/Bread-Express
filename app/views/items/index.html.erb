<% if @active_items.empty? %>
    <p>No active items at this time </p>
<% else %>
  <div class="panel clearfix">
    <h3>Bread Express Available Items</h3>
    <ul>
        <% @active_items.each do |item| %>
            <% unless item.picture_url.nil? %>
                <p><%= image_tag item.picture_url %></p>    
            <% end %>
        <li><%= link_to item.name, item_path(item) %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <%= link_to "Add to Cart", add_item_path(item.id) %></li>
      <% end %>
    </ul>
  </div>
<% end %>