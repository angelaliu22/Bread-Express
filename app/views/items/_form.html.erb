<%= simple_form_for @item, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> User</legend>
      <div class="field">
          <%= f.label :picture %><br />
          <%= f.file_field :picture %>
      </div>
      <%= f.input :name %>
		
      <%= f.input :description %>
      <%= f.input :category, :collection => ["bread", "muffins", "pastries"], :prompt => true %>
		
      <%= f.input :units_per_item %>
      <%= f.input :weight %>
      <%= f.input :active %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel',users_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
