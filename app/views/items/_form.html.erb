<%= simple_nested_form_for @item, :html => { :class => 'form-horizontal' } do |item_form| %>
    <div class="row">
      <div class="span7">
        <fieldset>
            <% if @item.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
                <ul>
                    <% @item.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
          <legend> New Item </legend>
            <div class = "field">
                <%= render :partial => "item_fields", :locals => { :f => item_form } %>
            
            <div id="item_price_form">
                <%= item_form.simple_fields_for :item_prices do |item_price_form| %>
                <%= item_price_form.input :price %>
                  <% end %>
            </div>
        </fieldset>
        </div> 
      </div>
    </div>
    <div class="form-actions">
        <%= item_form.submit nil, :class => 'button radius' %>
        <%= link_to 'Cancel', home_path, :class => 'button secondary' %>
    </div>
  <% end %>