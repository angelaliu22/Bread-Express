<% unless @related_items.empty? %>
    <div class="panel clearfix related-items">
        <h3>Similar Items </h3>
        <ul>
            <% @related_items.each do |item| %>
            <div class = "item-object">
                <% if item.picture_url.nil? %>
                <p><%= image_tag 'image-placeholder.png' %></p>  
                <% else %>
                    <p><%= image_tag item.picture_url %></p>  
                <% end %>
                <li><%= link_to item.name, item_path(item) %></li>
            </div>
          <% end %>
        </ul>
  </div>
<% end %>
